{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,

    // Linting

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules"]
}
